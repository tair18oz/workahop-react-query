{
  "name": "server",
  "version": "1.0.0",
  "description": null,
  "author": null,
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "export NODE_ENV=production && nest build",
    "start": "export NODE_ENV=production && nest start",
    "start:dev": "export NODE_ENV=development && nest start --watch",
    "start:debug": "export NODE_ENV=debug && nest start --debug --watch",
    "start:prod": "export NODE_ENV=production && node dist/main",
    "migration:generate": "export MIGRATION=on && typeorm-ts-node-esm migration:generate -d ./src/data-source.ts",
    "migration:up": "export MIGRATION=on && typeorm-ts-node-esm migration:run -d ./src/data-source.ts",
    "migration:down": "export MIGRATION=on && typeorm-ts-node-esm migration:revert -d ./src/data-source.ts"
  },
  "dependencies": {
    "@hilma/secrets-handler": "^1.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "10.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "mysql2": "^3.6.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "dotenv": "^16.3.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
